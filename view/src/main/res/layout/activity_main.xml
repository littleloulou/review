    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lph.view.MainActivity">


    <com.lph.view.customview.FollowHandView
        android:layout_width="match_parent"
        android:layout_height="60dp"
